{
    "manifest_version": 3,
    "name": "BiliStreamMonitor",
    "version": "2.0",
    "description": "Monitoring of Bilibili streamers based on your medal wall.",
    "permissions": [
        "cookies",
        "storage",
        "tabs",
        "alarms",
        "notifications"
    ],
    "host_permissions": [
        "https://*.bilibili.com/*",
        "https://*.hdslb.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/icon128.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": ["images/NA.png"],
            "matches": ["<all_urls>"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "images/icon128.png"
    }
}